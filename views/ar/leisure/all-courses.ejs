<style>
    .leisure-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: 90000;
    }

    .leisure-app-header {
        position: relative;
        z-index: 90001;
        background-color: rgba(0, 0, 0, 0.25);
        backdrop-filter: blur(4px);
        padding-top: 20px;
        padding-bottom: 20px;
    }

    .leisure-logo {
        display: flex;
        align-items: center;
        justify-content: center;
        filter: drop-shadow(0 0 2px lightskyblue);
        opacity: 0.5;
    }

    .leisure-app {
        position: relative;
        z-index: 90002;
        background-color: rgba(0, 0, 0, 0.25);
        backdrop-filter: blur(4px);
        margin-top: 30px;
        padding-top: 20px;
        padding-bottom: 20px;
    }

    .leisure-app-page {
        text-align: center;
    }

    .leisure-app-page h5 {
        font-size: 1.5rem;
        border-bottom: solid 1px #fff;
    }

    .app-body-menu {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-evenly;
        margin-top: 20px;
    }

    .app-body-menu a {
        color: rgb(18, 168, 18);
        text-shadow: 0 0 1px rgba(0, 0, 0, 0.75);
        background-color: rgba(255, 255, 255, 0.75);
        backdrop-filter: blur(4px);
        border-radius: 4px;
        font-size: 1.5rem;
        text-decoration: none;
        margin-bottom: 10px;
        padding: 5px;
    }


    .golf-course-list {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin-bottom: 50px;
    }
    .golf-course-list h5 {
        font-size: 3rem;
        padding: 10px;
        border-bottom: solid 1px #fff;
        margin-bottom: 30px;
    }
    .course-link {
        text-align: center;
        margin-bottom: 20px;
    }
    .course-link a {
        text-decoration: none;
        color: #fff;
        font-size: 2rem;
    }
    .add-golf-course {
        border-top: solid 1px #fff;
        border-bottom: solid 1px #fff;
        padding-top: 15px;
        padding-bottom: 15px;
    }
    .add-golf-course form {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .add-golf-course p {
        text-align: center;
        margin-top: 15px;
        margin-bottom: 15px;
        font-size: 1.5rem;
        color: #fff;
    }
    .add-golf-course input {
        background-color: #000;
        border: none;
        outline: none;
        border-radius: 4px;
        padding: 5px;
        margin-bottom: 5px;
    }
    input[type="checkbox"] {
	appearance: none;
	width: 30px;
	height: 30px;
	border: 2px solid rgba(0, 0, 0, 0.75);
	background-clip: content-box;
    background-color: #fff;
	padding: 3px;
    box-shadow: 0 0 5px #fff, inset 0 0 5px #fff;
    border-radius: 50%;
}

input[type="checkbox"]:checked {
    background-color: green;
    box-shadow: 0 0 5px green, inset 0 0 5px green;
}
    .add-golf-course-checkbox {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: center;
        margin-top: 10px;
    }
    .add-golf-course-checkbox label {
        margin-right: 10px;
        color: #fff;
        font-size: 1.3rem;
    }
    .add-golf-course button {
        margin-top: 10px;
        padding: 8px;
        border: none;
        outline: none;
        border-radius: 8px;
        background-color: lightskyblue;
        color: #fff;
        font-size: 1.2rem;
    }
</style>



<div class="leisure-background"
    style="background-image: url('/images/system/ar/ar_golf_background_1a1a1a.jpg'); background-size: cover; background-repeat: no-repeat; background-position: center;">
</div>
<div class="leisure-app-header">
    <div class="page-title">
        <h2>WideSpread</h2>
    </div>

    <div class="leisure-logo">
        <img src="/images/system/ar/ar_golf_1a1a1a.png" alt="">
    </div>




</div>
<div class="leisure-app">
    <div class="leisure-app-page">
        <h5>Courses</h5>
    </div>

    <div class="leisure-app-body">
        <div class="app-body-menu">
            <% if (user) { %>
                <a href="/ar/sports/golf/user/<%= user.id %>">Your Caddy</a>
            <% } %>
        </div>



        <div class="golf-course-list">
            <h5>All Courses</h5>    
            <% allCourses.forEach(function(course) { %>
                <div class="course-link">
                    <a href="/ar/sports/golf/courses/view/<%= course.id %>"><%= course.name %></a>
                </div>
            <% }) %>
        </div>

        <div class="add-golf-course">
            <form action="/ar/sports/golf/courses/add" method="post">
                <input type="text" name="name" placeholder="Course Name">
                <input type="text" name="lat" placeholder="Latitude">
                <input type="text" name="long" placeholder="Longitude">
                <div class="add-golf-course-checkbox">
                    <label for="drivingRange">Driving Range?</label>
                    <input type="checkbox" name="driving_range" id="drivingRange" value="true">
                </div>

                <p>Address</p>
                <input type="text" name="street" placeholder="Street">
                <input type="text" name="city" placeholder="City">
                <input type="text" name="state" placeholder="State">
                <input type="text" name="zip" placeholder="Zip">
                <input type="text" name="country" placeholder="Country" value="United States">
                <button type="submit">Add Course</button>
            </form>
        </div>
    </div>
</div>