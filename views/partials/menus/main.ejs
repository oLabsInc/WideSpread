        border-radius: 12px;
        margin-top: 20px;
        margin-bottom: 20px;
    }
    .menu-avatar {
        border-radius: 50%;
        height: 25px;
        width: 25px;
        overflow: hidden;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        
    }

    #userNotificationsBtn {
        cursor: pointer;    
    }
    #notificationsModal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: calc(100vh - 52px);
        padding-top: 52px;
        background-color: #111;
        z-index: 99960;
        display: none;
        transition: ease-in-out 0.25s;
    }
    .notifications-header {
        position: relative;
        padding: 10px;
        text-align: center;
    }
    .notifications-header h5 {
        font-size: 1.3rem;

    }

    #closeNotificationsBtn {
        cursor: pointer;
        position: absolute;
        top: 0;
        right: 10px;
        z-index: 99961;
        font-size: 2rem;
        color: #fff;
    }


    .notifications-data {
        color: #fff;
        font-size: 1.2rem;
    }
    .notifications-data p {
        padding: 12px;
        border-bottom: solid 1px lightskyblue;
        cursor: pointer;
    }
    .notifications-data a {
        font-size: 1.3rem;
    }
    .notifications-data span {
        color: lightskyblue;
    }
    #notificationsCategoryData {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 90vw;
        height: 80vh;
        z-index: 99962;
        border-radius: 26px;
        padding: 12px;
        display: none;
        background-color: #111;
        box-shadow: 0 0 30px rgba(17, 17, 17, 0.6), 0 0 300px rgba(135, 206, 250, 0.5);
        opacity: 0;
        transition: ease-in-out 0.5s;
    }
    .notifications-category-title {
        position: relative;
        width: 100%;    
        padding: 10px;
    }
    #notificationsCategoryDataTitle {
        text-align: center;
        color: #fff;
        width: 100%;    
        font-size: 1.3rem;
    }


    .friend-request-item {
        color: lightskyblue;
        margin-bottom: 10px;
        border-bottom: solid 1px #fff;
        padding: 5px;
        font-size: 1.2rem;
        /* NEED TO POPULATE REQUESTING USER DATA */
    }

    #notificationsCategoryDataCloseBtn {
        position: absolute;
        top: 0;
        right: 20px;
        font-size: 2rem;
        color: #fff;

    }
    @media screen and (orientation : landscape) {
        #mainMenu {
            display: block;

        }
        .reality-nav {
            margin: 0 auto;
            width: 90%;
        }
        .reality-nav > div {
            width: 20%;
        }
        .main-menu {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            align-items: center;
            justify-content: space-evenly;
            margin-top: 30px;
        }
        .main-menu-item {
            border-radius: 6px;
            width: 40%;
            margin-bottom: 15px;
        }

    }


@media screen and (min-width: 900px) {

        #mainMenu {
