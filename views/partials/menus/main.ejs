    .reality-nav {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: space-evenly;
        width: 100%;
        padding-top: 10px;
        padding-bottom: 10px;
    }
    .reality-button {
        cursor: pointer;
    }
    .reality-nav > div {
        background: rgba(135, 206, 250, 0.25);
        border-radius: 8px;
        box-shadow: inset 0 0 10px rgba(255, 255, 255, 0.25);
        padding: 10px;
        width: 30%;
        text-align: center;
    }
    .reality-nav > .current-menu {
        background: none;
        padding: 3px;
        width: 20%;
        box-shadow: none;
    }
    .reality-nav > .current-menu small {
        text-align: center;
        color: #fff;
    }
    .reality-nav > .current-menu p {
        text-align: center;
        color: #fff;
        font-weight: bold;
        font-size: 2rem;
    }

    .reality-nav > div > span > p {
        font-weight: bold;
        font-size: 1.5rem;
        color: #fff;
        transition: ease-in-out 0.25s;
    }
    .reality-nav > div > span > p:hover {
        color: lightskyblue;
        text-shadow: 0 0 3px rgba(255, 255, 255, 0.5);
    }
    .main-menu {
