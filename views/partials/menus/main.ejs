            padding-bottom: 0;
            width: 100%;
            flex-direction: column;
            flex-wrap: nowrap;
            justify-content: space-evenly;
            align-items: center;
        }
        .main-menu-item {
            border-radius: 0;
            width: 100%;
            margin-left: 0 auto;
            margin-bottom: 8px;
        }

        .inner-menu {
            padding-top: 35px;
        
        }
}

