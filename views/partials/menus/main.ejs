<script>
    const coreContainer = document.getElementById('coreContainer')

    const userNotificationsBtn = document.getElementById('userNotificationsBtn')
    const notificationsModal = document.getElementById('notificationsModal')
    const closeNotificationsBtn = document.getElementById('closeNotificationsBtn')

    const friendRequestsBtn = document.getElementById('friendRequestsBtn')
    const pendingFriendRequestsBtn = document.getElementById('pendingFriendRequestsBtn')

    const notificationsCategoryData = document.getElementById('notificationsCategoryData')
    const notificationsCategoryDataCloseBtn = document.getElementById('notificationsCategoryDataCloseBtn')
    const notificationsCategoryDataTitle = document.getElementById('notificationsCategoryDataTitle')
    const notificationsCategoryDataItems = document.getElementById('notificationsCategoryDataItems')

    userNotificationsBtn.addEventListener('click', e => {
        notificationsModal.style.display = 'block'
        document.body.style.overflow = 'hidden'
        document.body.style.overflowX = 'hidden'
        document.body.style.paddingBottom = '0'
        coreContainer.style.overflow = 'hidden'
        coreContainer.style.overflowX = 'hidden'
        coreContainer.style.paddingTop = '0'
    })
    closeNotificationsBtn.addEventListener('click', e => {
        notificationsModal.style.display = 'none'
        document.body.style.overflow = 'auto'
        document.body.style.overflowX = 'hidden'
        document.body.style.paddingBottom = '50px'
        coreContainer.style.overflow = 'auto'
        coreContainer.style.overflowX = 'hidden'
        coreContainer.style.paddingTop = '50px'
    })

    friendRequestsBtn.addEventListener('click', e => {
        notificationsCategoryData.style.display = 'block'
        notificationsCategoryData.style.opacity = '1'
        notificationsCategoryDataTitle.innerText = 'Friend Requests'
    })
        
    pendingFriendRequestsBtn.addEventListener('click', e => {
        notificationsCategoryData.style.display = 'block'
        notificationsCategoryData.style.opacity = '1'
        notificationsCategoryDataTitle.innerText = 'Pending Friend Requests'
        notificationsCategoryDataItems.innerHTML = `
        <% if (!user) { %>
            <span style="display: none;"></span>
        <% } else { %>
            <% user.pending_friend_requests.forEach(function(request) { %>
                <p class="friend-request-item">USER ID: <%= request %></p>
            <% }) %>
        <% } %>
        `
    })
    
    
    
    
    notificationsCategoryDataCloseBtn.addEventListener('click', e => {
        notificationsCategoryData.style.display = 'none'
        notificationsCategoryDataTitle.innerText = ''

    })
</script>