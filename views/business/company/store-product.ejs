<style>

    .company-background-image {
        position: fixed;
        top: 0;
        left: 0;
        min-width: 100vw;
        min-height: 100vh;
        z-index: -50;
    }

    .company-background-image-filter {
        position: fixed;
        background: rgba(0, 0, 0, 0.5);
        box-shadow: inset 0 0 100px #000;
        top: 0;
        left: 0;
        min-width: 100vw;
        min-height: 100vh;
        z-index: -40;

    }


    .company-pages-nav {
        width: 100%;
        background: rgba(0, 0, 0, 0.25);
        margin-top: 20px;
        backdrop-filter: blur(4px);
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-evenly;
        padding-top: 10px;
        padding-bottom: 10px;
        border-top: outset 1px rgba(255, 255, 255, 0.5);
        border-bottom: outset 1px rgba(255, 255, 255, 0.5);
        box-shadow: 0 3px 5px rgba(0, 0, 0, 0.4);
    }
    .company-nav-item {
        width: fit-content;
        min-width: 100px;
        padding: 8px;
        text-align: center;
    }
    .company-nav-item a {
        color: #fff;
        text-decoration: none;
    }
    .subpage-active a {
        color: lightskyblue;
    }
    .product-container {
        width: 90%;
        margin: 0 auto;
        margin-top: 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        background: rgba(0, 0, 0, 0.25);
        backdrop-filter: blur(4px);
        border-radius: 16px;
        border-top: outset 1px #fff;
        border-bottom: outset 1px #fff;

    }
    .product-header {
        margin-top: 15px;
        margin-bottom: 30px;
        text-align: center;
    }
    .product-header h2 {
        font-size: 1.5rem;
    }
    .product-header h3 {
        font-size: 1.3rem;
    }
    .image-slider {
        width: 90%;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: center;
    }
    .image {
        width: 200px;
        max-width: 80vw;
    }
    .image img {
        width: 100%;
        border-radius: 16px;
    }
    .product-data {
        color: #fff;
        margin-top: 20px;
        padding: 10px;
        font-size: 1.1rem;
    }
    .product-details {
        padding: 10px;
        margin-top: 20px;
    }
    .product-actions {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        width: 100%;
    }

    .product-actions > span {
        color: #fff;
        padding: 10px;
        padding-left: 20px;
        font-size: 1.5rem;
    }
    .product-buttons {
        font-size: 1.5rem;
        padding: 10px;
        padding-right: 20px;
    }
    .product-buttons a {
        color: lightskyblue;
    }
    .popup-image {
        position: fixed;
        z-index: 10000;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.75);
        backdrop-filter: blur(4px);

    }
    .popup-image img {
        width: 100%;
        max-height: 100vh;
    }
    .exit {
        position: fixed;
        top: 80px;
        right: 30px;
        width: 40px;
        height: 40px;
        background: rgba(255, 0, 0, 0.25);
        backdrop-filter: blur(4px);
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.25), inset 0 0 5px #fff;
        color: #fff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }
</style>
<%- include('../../partials/menus/business'); %>
    <div class="company-background-image"
        style="background:url('/image/<%= company.background_image %>') 50% 50% no-repeat; background-size:cover;">
    </div>
    <div id="popup"></div>
<div class="company-pages-nav">
    <div class="company-nav-item <%= subZonePage=='Home' ? 'company-nav-item subpage-active' : 'company-nav-item' %>">
        <a href="/business/company/<%= company.id %>">Home</a>
    </div>
    <% pages.forEach(function(page) { %>
        <div class="company-nav-item <%= subZonePage==page.page_name ? 'company-nav-item subpage-active' : 'company-nav-item' %>">
            <a href="/business/company/<%= company.id %>/page/<%= page.id %>"><%= page.page_name %></a>
        </div>
    <% }) %>
</div>
<div class="page-title">
    <h2><%= subZonePage %></h2>
</div>


<div class="product-container">
    <div class="product-header">
        <h2><%= item.make %></h2>
        <h3><%= item.name %></h3>
    </div>

    <div class="image-slider">
            <div class="image">
                <img src="/image/<%= item.item_images[0] %>" alt="">
            </div>
    </div>

    <div class="product-data">
        <div class="product-description">
            <p><%= item.description %></p>
        </div>
        <div class="product-details">
            <span><%= item.total %></span>

            <div class="product-weight">
                <span>Weight: <%= item.weight.value %><%= item.weight.units %></span>
            </div>
        </div>
    </div>
    <div class="product-actions">
        <span>$<%= item.price %></span>
        <div class="product-buttons">
            <span><a href="#"><i style="color: <%= company.colors.main %>" class="fas fa-cart-plus"></i></a></span>
        </div>
    </div>


</div>


<script>
    const mainImageContainer = document.querySelector('.image')
    const popup = document.getElementById('popup')
    const mainImage = mainImageContainer.querySelector('img')
    const imageSrc = mainImage.getAttribute('src')
    console.log(imageSrc)
    console.log(mainImage)
    mainImage.addEventListener('click', () => {
        console.log("click")
        let popupImageContainer = document.createElement('div')
        popupImageContainer.classList.add('popup-image')
        let popupImageSrc = imageSrc
        let exitBtn = document.createElement('div')
        exitBtn.classList.add('exit')
        exitBtn.innerText = 'X'
        exitBtn.addEventListener('click', () => {
            popup.removeChild(popupImageContainer)
        })
        let popupImage = document.createElement('img')
        popupImage.setAttribute('src', popupImageSrc)
        popupImageContainer.appendChild(popupImage)
        popupImageContainer.appendChild(exitBtn)
        popup.appendChild(popupImageContainer)
    })


</script>