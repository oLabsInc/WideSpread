<style>
    .company-background-image {
        position: fixed;
        top: 0;
        left: 0;
        min-width: 100vw;
        min-height: 100vh;
        z-index: -50;
    }

    .company-background-image-filter {
        position: fixed;
        background: rgba(0, 0, 0, 0.5);
        box-shadow: inset 0 0 100px #000;
        top: 0;
        left: 0;
        min-width: 100vw;
        min-height: 100vh;
        z-index: -40;

    }


    .company-pages-nav {
        width: 100%;
        background: rgba(0, 0, 0, 0.25);
        margin-top: 20px;
        backdrop-filter: blur(4px);
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-evenly;
        padding-top: 10px;
        padding-bottom: 10px;
        border-top: outset 1px rgba(255, 255, 255, 0.5);
        border-bottom: outset 1px rgba(255, 255, 255, 0.5);
        box-shadow: 0 3px 5px rgba(0, 0, 0, 0.4);
    }

    .company-nav-item {
        width: fit-content;
        min-width: 100px;
        padding: 8px;
        text-align: center;
    }

    .company-nav-item a {
        color: #fff;
        text-decoration: none;
    }

    .subpage-active a {
        color: lightskyblue;
    }

    .company-container {
        width: 100vw;
        margin: 0 auto;
    }

    .company-header {
        margin-top: 20px;
    }

    .company-name {
        position: relative;
        z-index: 10;
        text-align: center;
        color: #fff;
    }

    .company-name h2 {
        font-size: 1.8rem;
    }

    .company-name p {
        font-size: 0.8rem;
        margin-top: 10px;
    }

    .company-logo {
        width: 90%;
        max-width: 300px;
        margin: 0 auto;
        margin-top: 20px;
    }

    .company-logo img {
        width: 100%;
        border-radius: 16px;
    }


    .edit-form {
        width: 90%;
        margin: 0 auto;
        margin-top: 30px;
        margin-bottom: 50px;
        padding-top: 20px;
        background: rgba(0, 0, 0, 0.25);
        backdrop-filter: blur(4px);
        border-radius: 8px;
        border-top: outset 1px rgba(255, 255, 255, 0.5);
        border-bottom: outset 1px rgba(255, 255, 255, 0.5);
        box-shadow: 0 3px 5px rgba(0, 0, 0, 0.4);
    }


    .edit-form-main-header {
        text-align: center;
        margin-bottom: 15px;
    }

    .edit-form-main-header h3 {
        font-size: 1.4rem;
    }



    .edit-form-section {
        width: 90%;
        margin: 0 auto;
        margin-top: 30px;
    }

    .edit-form-header {
        text-align: center;
        padding: 8px;
        font-size: 1.2rem;
    }

    .edit-input label {
        color: #fff;
        padding: 8px;
    }

    .edit-input {
        width: 100%;
        margin-bottom: 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        flex-wrap: nowrap;
    }

    .edit-input input {
        width: 100%;
        min-width: 100%;
        padding: 5px;
        border-radius: 4px;
        outline: none;
        border: none;
        background: rgba(135, 206, 250, 0.25);
        backdrop-filter: blur(4px);
        box-shadow: 0 0 12px rgba(255, 255, 255, 0.25), 0 0 2px lightskyblue;
    }

    .edit-input input::placeholder {
        color: rgba(255, 255, 255, 0.5);
        text-shadow: 0 0 2px lightskyblue;
    }

    .edit-input textarea {
        width: 100%;
        min-width: 100%;
        padding: 5px;
        border-radius: 4px;
        outline: none;
        border: none;
        resize: none;
        min-height: 150px;
        background: rgba(135, 206, 250, 0.25);
        backdrop-filter: blur(4px);
        box-shadow: 0 0 12px rgba(255, 255, 255, 0.25), 0 0 2px lightskyblue;
    }

    .edit-input textarea::placeholder {
        color: rgba(255, 255, 255, 0.5);
        text-shadow: 0 0 2px lightskyblue;
    }

    .edit-form-photos {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: flex-start;
        overflow-x: scroll;
        margin-bottom: 20px;
    }

    .delete-photo {
        position: absolute;
        top: 5px;
        right: 5px;
        background: rgba(255, 0, 0, 0.25);
        backdrop-filter: blur(4px);
        box-shadow: 0 0 8px rgba(255, 255, 255, 0.25), 0 0 2px red;
        padding: 8px;
        border-radius: 50%;
        width: 15px;
        height: 15px;
        line-height: 15px;
        text-align: center;
    }

    .delete-photo p {
        color: #fff;
        text-shadow: 0 0 2px #fff;
    }

    .edit-form-photo {
        position: relative;
        margin-right: 15px;
        width: 150px;

    }

    .edit-form-photo img {
        width: 100%;
        border-radius: 8px;
        box-shadow: 0 0 12px rgba(255, 255, 255, 0.25), 0 0 2px lightskyblue;
    }

    .edit-button {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 30px;
    }

    .edit-button button {
        background: rgba(135, 206, 250, 0.5);
        color: #fff;
        font-size: 1.4rem;
        border-radius: 8px;
        padding: 8px;
        border: none;
        outline: none;
        box-shadow: 0 0 12px rgba(255, 255, 255, 0.25), 0 0 2px lightskyblue;
    }
    #pageList {
        width: 90%;
        padding-top: 10px;
        padding-bottom: 10px;
    }
    .list {
        margin-bottom: 10px;
        width: 100%;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: space-between;
        align-items: center;
    }
    .list input {
        border-radius: 4px;
        padding: 5px;
        outline: none;
        border: none;
        width: 80%;
        background: rgba(135, 206, 250, 0.25);
        backdrop-filter: blur(4px);
        box-shadow: 0 0 12px rgb(255 255 255 / 25%), 0 0 2px lightskyblue;
    }
    .add-item {
        width: 10%;
        border: none;
        outline: none;
        font-size: 1.5rem;
        border-radius: 4px;
        background: rgba(0, 128, 0, 0.25);
        box-shadow: 0 0 12px rgb(255 255 255 / 25%), 0 0 2px lime;
        backdrop-filter: blur(4px);
        color: #fff;
        padding: 5px;
        padding-top: 0;
        margin: 0;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<%- include('../../../partials/menus/business'); %>

    <div class="company-background-image"
        style="background:url('/image/<%= company.background_image %>') 50% 50% no-repeat; background-size:cover;">
    </div>
    <div class="company-background-image-filter"></div>


    <form action="/business/admin/<%= company.id %>/manage/public-pages/add" method="post">
        <div class="edit-form">







            <div class="edit-form-main-header">
                <h3>Add Subpage</h3>
            </div>

            <div class="page-type">
                <select name="page_type" id="pageType">
