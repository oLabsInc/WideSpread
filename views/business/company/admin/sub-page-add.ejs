                </select>
            </div>
            <div class="edit-form-section">
                <div class="edit-form-header">
                    <h5>Page Content</h5>
                </div>

                <div class="edit-input">
                    <label for="pageName">Page Name</label>
                    <input type="text" id="pageName" name="page_name" placeholder="Page Name" required>
                </div>

                <div class="edit-input">
                    <label for="">First Header</label>
                    <input type="text" name="page_header1" placeholder="First Header">
                </div>
                <div class="edit-input">
                    <label for="">First Body</label>
                    <textarea name="page_body1"
                        placeholder="First Headers Content"></textarea>
                </div>



                <div class="edit-input">
                    <label for="">Second Header</label>
                    <input type="text" name="page_header2" placeholder="Second Header">
                </div>
                <div class="edit-input">
                    <label for="">Second Body</label>
