    <script>
        let pageList = document.getElementById('pageList')
        let listItems = []
        let eachListItem = pageList.querySelectorAll('.list')

        
        eachListItem.forEach(item => {
            let inputVal = item.querySelector('input').value
            console.log('Item: ', inputVal)
            item.querySelector('.add-item').addEventListener('click', function(event) {
                event.preventDefault()
                let newListItemContainer = document.createElement('div')
                let newListItemInput = document.createElement('input')
                newListItemInput.setAttribute('placeholder', 'List Item')
                newListItemInput.setAttribute('name', 'list')
                newListItemInput.setAttribute('type', 'text')
                newListItemContainer.classList.add('list')
                newListItemContainer.appendChild(newListItemInput)
                pageList.appendChild(newListItemContainer)
                console.log("Clicked")
                
            })

            listItems.push(inputVal)
        })
        console.table(listItems)

    </script>