<style>
    .add-new-item {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 30px;
        margin-bottom: 30px;
    }
    .add-new-item a {
        color: #fff;
        text-decoration: none;
        font-size: 1.3rem;
        padding: 10px;
        background: rgba(135, 206, 250, 0.25);
        backdrop-filter: blur(4px);
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.25), 0 0 3px lightskyblue;
        border-radius: 8px;
        margin-bottom: 20px;
    }
    .inventory-header {
        text-align: center;
        padding: 15px;
    }
    .inventory-list {
        width: 90%;
        max-width: 90%;
        margin: 0 auto;
        border-top: outset 1px rgba(255, 255, 255, 0.5);
        border-bottom: outset 1px rgba(255, 255, 255, 0.5);
        border-radius: 8px;
        padding-top: 8px;
        padding-bottom: 8px;
        backdrop-filter: blur(4px);
        background: rgba(0, 0, 0, 0.25);

    }
    .inventory-list table {
        width: 100%;
    }
    .inventory-list th {
        color: lightskyblue;
        border-bottom: outset 2px rgba(135, 206, 250, 0.5);
        border-left: solid 1px lightskyblue;

    }
    .inventory-list th:first-of-type {
        border-left: none;
    }
    .inventory-list td {
        color: #fff;
        padding: 3px;
        border-left: solid 1px rgba(135, 206, 250, 0.5);

    }

    .inventory-list tr:nth-child(even) {
        background: rgba(135, 206, 250, 0.25);
        box-shadow: inset 0 0 4px rgba(255, 255, 255, 0.25);
    }
    .inventory-list tr:nth-child(even) td {
        border-left: solid 1px rgba(0, 0, 0, 0.5);
    }
    .inventory-list td:first-of-type {
        border-left: none;
    }
    .inventory-item {
        margin-bottom: 30px;
    }
</style>

<div class="add-new-item">
    <a href="/business/admin/<%= company.id %>/manage/inventory/add">Add New Item</a>
</div>
<div class="inventory-header">
    <h3>Current Inventory</h3>
</div>
<div class="inventory-list">
    <table>
        <thead>
            <tr>
                <th>Make</th>
                <th>Model</th>
                <th>SKU</th>
                <th>Qty.</th>
            </tr>
        </thead>
        <tbody>
            <% companyInventory.forEach(function(item) { %>
                <tr>
                    <td><%= item.make %></td>
                    <td><%= item.model %></td>
                    <td style="text-align: center;"><%= item.sku %></td>
                    <td><%= item.in_stock %></td>
                </tr>    
            <% }) %>
        </tbody>
    </table>
</div>