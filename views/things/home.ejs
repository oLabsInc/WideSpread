    background-color: rgba(255, 105, 180, 0.473);
}
#zoneMenuLeft {
    position: absolute;
    width: 15px;
    left: 0;
    top: 50%;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    box-shadow: 4px 0 8px rgba(0, 0, 0, 0.6);
    
}
#zoneMenuRight {
    width: 15px;
    position: absolute;
    right: 0;
