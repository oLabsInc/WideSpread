<style>
    p {
        color: #fff;
        padding: 20px;
        margin-bottom: 30px;
    }

    .create-quiz {

        width: 90%;
        margin: 0 auto;
        margin-top: 30px;
    }
    .create-quiz form {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .add-questions {
        background: rgba(0, 0, 0, 0.25);
        backdrop-filter: blur(4px);
        width: 90%;
        margin: 0 auto;
        margin-top: 30px;
        margin-bottom: 30px;
        border-radius: 16px;
        border-top: outset 1px rgba(255, 255, 255, 0.5);
        border-bottom: outset 1px rgba(255, 255, 255, 0.5);
        text-align: center;
        padding-top: 30px;
        padding-bottom: 30px;
    }
    .create-quiz button {
        width: 50%;
        margin: 0 auto;
        margin-top: 20px;
        background: rgba(255, 255, 255, 0.25);
        border-radius: 8px;
        padding: 10px;
        font-size: 1.3rem;
        color: lightskyblue;
        text-shadow: 0 0 2px rgba(135, 206, 250, 0.5);
        margin-bottom: 20px;
        outline: none;
        border: none;
        box-shadow: inset 0 0 10px rgba(255, 255, 255, 0.25), 0 0 10px rgba(255, 255, 255, 0.25), 0 0 2px lightskyblue;
    }
    .add-questions a {
        color: #fff;
        text-decoration: none;
        font-size: 1.3rem;
    }

    .current-quiz-container {
        width: 90%;
        margin: 0 auto;
    }
    .current-quiz-container-header {
        text-align: center;
        margin-top: 20px;
        margin-bottom: 20px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
    }
    .current-quiz-container-header h3 {
        font-size: 1.6rem;
        border-bottom: solid 1px lightskyblue;
        width: fit-content;
    }
    .current-quiz-container ol {
        list-style: decimal;
        
    }
    .current-quiz-container li {
        color: lightskyblue;
        border-bottom: solid 1px rgba(135, 206, 250, 0.5);
        margin-bottom: 15px;
        padding: 20px;
        margin-left: 30px;
        font-size: 1.3rem;

    }

    .current-quiz-container li:last-of-type {
        color: lightskyblue;
        border-bottom: none;
        margin-bottom: 15px;
        padding: 20px;
        margin-left: 30px;
        font-size: 1.5rem;

    }
    .possible-answers {
        padding: 20px;
    }
    .possible-answers p {
        padding: 0;
        margin-bottom: 5px;
    }
    .possible-answers small {
        color: #fff;
        margin-left: 20px;
        font-size: 0.8rem;
    }
    .possible-answers i {
        color: green;
    }
    .correct {
        color: green;
    }
    .edit-question {
        
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: flex-end;
    }
    .edit-question a {
        color: lightskyblue;
        text-decoration: none;
    }
</style>

<div class="page-title">
    <h2>Create Quiz</h2>
    <h2><%= currentPage %></h2>
</div>


    
<% quiz.forEach(function(quizId) { %>
    <div class="add-questions">
        <a href="/admin/academy/course/<%= course.id %>/class/<%= className.id %>/quiz/<%= quizId.id %>/questions">Add/Edit Questions</a>
    </div>
    <% }) %>

<% if (quiz.length >= 1) { %>
<% quiz.forEach(function(quizId) { %>
<div class="current-quiz-container">
    <div class="current-quiz-container-header">
        <h3>Current Questions</h3>
    </div>
    <ol>
    <% quizId.questions.forEach(function(question) { %>
        <li>
        <div class="question">
            <p><%= question.question %></p>
        </div>
        <div class="possible-answers">
            <% if (question.options.option1.option_number === question.answer) { %>
                
                <p class="correct"><%= question.options.option1.option_number %> - <%= question.options.option1.possible_answer %> <small><i class="far fa-check-circle"></i></small></p>
            <% } else { %>
                <p><%= question.options.option1.option_number %> - <%= question.options.option1.possible_answer %></p>
            <% } %>
            <% if (question.options.option2.option_number === question.answer) { %>
                
                <p class="correct"><%= question.options.option2.option_number %> - <%= question.options.option2.possible_answer %> <small><i class="far fa-check-circle"></i></small></p>
            <% } else { %>
                <p><%= question.options.option2.option_number %> - <%= question.options.option2.possible_answer %></p>
            <% } %>
            <% if (question.options.option3.option_number === question.answer) { %>
                
                <p class="correct"><%= question.options.option3.option_number %> - <%= question.options.option3.possible_answer %> <small><i class="far fa-check-circle"></i></small></p>
            <% } else { %>
                <p><%= question.options.option3.option_number %> - <%= question.options.option3.possible_answer %></p>
            <% } %>
            <% if (question.options.option4.option_number === question.answer) { %>
                
                <p class="correct"><%= question.options.option4.option_number %> - <%= question.options.option4.possible_answer %> <small><i class="far fa-check-circle"></i></small></p>
            <% } else { %>
                <p><%= question.options.option4.option_number %> - <%= question.options.option4.possible_answer %></p>
            <% } %>


        </div>
        <div class="edit-question">
            <a href="#"><i class="far fa-edit"></i></a>
        </div>
        </li>
    <% }) %>
    </ol>
</div>
<% }) %>
<% } else { %>
<div class="create-quiz">
    <form action="/admin/academy/course/<%= course.id %>/class/<%= className.id %>/quiz/create" method="post">
        <button type="submit">Create a Quiz</button>
    </form>
</div>
<% } %>
