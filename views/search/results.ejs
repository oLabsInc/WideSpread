                            <% if (item.classes.length > 0) { %>
                                <% item.classes.forEach(function(className) { %>
                                    <p><%= className.name %></p>
                                <% }) %>
                            <% } else { %>
                                <p style="text-align: center;">No classes yet.</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <span style="display: none;"></span>
        <% } %>




