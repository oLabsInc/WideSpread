                        <img src="/image/<%= item.in_course.background_image %>" alt="">
                    </div>
                    <div class="result-item-data">
                        <div class="result-item-data-header">
                            <div class="result-item-data-header-name">
                                <h5><%= item.name %></h5>
                            </div>
                            <div class="result-item-data-header-type">
                                <p><%= item.in_course.course %></p>
                            </div>
                        </div>
                        <div class="result-item-data-body">
                            <p><%= item.description %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <span style="display: none;"></span>
        <% } %>



        <% if (questions.length > 0) { %>
            <div class="result-group-header">
                <h2>Questions</h2>
            </div>
