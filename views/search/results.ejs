                    <div class="result-item-image">
                        <img src="/images/system/question-mark_1a1a1a.png" alt="">
                    </div>
                    <div class="result-item-data">
                        <div class="result-item-data-header">
                            <div class="result-item-data-header-name">
                                <h5><%= item.question_body %></h5>
                            </div>
                            <div class="result-item-data-header-type">
                                <p><%= item.category %></p>
                            </div>
                        </div>
                        <div class="result-item-data-body">
                            <% if (item.answers > 0) { %>
                                <% item.answers.forEach(function(answer) { %>
                                    <p><%= answer.answer_body %></p>
                                <% }) %>
                            <% } else { %>
                                <p>This question hasn't been answered yet.</p>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <span style="display: none;"></span>
        <% } %>






    <% } %>
