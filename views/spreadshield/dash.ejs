<style>
    h1 {
        font-size: 4rem;
    }
    body {
        overflow: hidden;
    }
    #coreContainer {
        overflow: hidden;
        min-height: 50vh;
    }
    #dashboardContainer {
        width: calc(100vw - 20px);
        height: calc(100vh - 52px);
        position: fixed;
        overflow: hidden;
        top: 0;
        left: 0;
        padding-top: 52px;
        padding-left: 10px;
        padding-right: 10px;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: flex-start;
        justify-content: space-between;
    }
    #driverCluster, #centerCluster, #passengerCluster {
        height: 99%;
        width: 33%;
    }
    #driverCluster {
        position: relative;
        cursor: none;
    }
    #speedometer {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 10rem;
        text-align: center;
    }
    .rpm-cluster {
        position: absolute;
        width: 90%;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        border-top-left-radius: 200%;
        border-top-right-radius: 26px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.4);
        z-index: 88888;
    }
    #rpmMax {
        width: 100%;
        min-width: 100%;
        height: 80px;
        position: relative;
        background-color: rgba(0, 255, 255, 0.5);
    }
    #rpmCurrent {
        width: 30%;
        height: 80px;
        background-color: orangered;
    }
    #centerCluster {
        text-align: center;
    }

    #centerCluster h1 {
        color: lightskyblue;
        border: solid 1px #fff;
        border-top: none;
        border-bottom-left-radius: 26px;
        border-bottom-right-radius: 26px;
        margin-bottom: 30px;
        font-size: 5rem;
        padding: 10px;
        background-color: rgba(0, 0, 0, 0.25);
        box-shadow: 0 8px 8px rgba(135, 206, 250, 0.4);
    }
    #centerCluster h2 {
        font-size: 3rem;
        cursor: pointer;
    }
    #centerCluster h2 a {
        font-size: 3rem;
        text-decoration: none;
        color: aqua;
        cursor: pointer;
    }
    #centerClusterOptions {
        height: calc(100vh - 200px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-evenly;
    }
    #passengerCluster {
        max-height: calc(100vh - 100px);
        overflow-y: auto;
        overflow-x: hidden;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
        justify-content: flex-start;
        padding: 30px;
        
    }


    .video-thumbnail {
        width: 300px;
        margin-left: 10px;
        margin-bottom: 10px;
        border-radius: 16px;
        overflow: hidden;
    }
    .video-thumbnail img {
        width: 100%;
        max-width: 100%;
        cursor: pointer;
        aspect-ratio: 16 / 9;
    }

</style>

<div id="dashboardContainer">
    <div id="driverCluster">

        <h3 id="speedometer">58 MPH</h3>
        <div class="rpm-cluster">
            <div id="rpmMax">
                <div id="rpmCurrent"></div>
            </div>
        </div>

    </div>
    
    <div id="centerCluster">
        <h1>Center</h1>
        <div id="centerClusterOptions">
            <h2>Radio</h2>
            <h2>Temperature</h2>
            <h2>Comfort</h2>
            <h2>Apps</h2>
            <h2>Navigation Main</h2>
            <h2>Calls/Video Chat</h2>
            <h2><a target="_blank" href="/spreadshield-dash/passenger">Passenger</a></h2>
        </div>
        
    </div>
    
    <div id="passengerCluster">
        <% videos.forEach(function(video) { %>
            <div class="video-thumbnail">
                <img src="<%= video.thumbnail %>" data-video-src="<%= video.url_source %>" data-video-title="<%= video.title %>">
            </div>
        <% }) %>
    </div>
</div>



<script>
    const videoEls = document.querySelectorAll('.video-thumbnail img')


    const passengerBroadcast = new BroadcastChannel('passengerBroadcast')
    const rearDriverBroadcast = new BroadcastChannel('rearDriverBroadcast')
    const rearPassengerBroadcast = new BroadcastChannel('rearPassengerBroadcast')


    videoEls.forEach(video => {
        video.addEventListener('click', e => {
            const target = e.target
            console.log(target)
            const videoSrc = target.getAttribute('data-video-src')
            const videoTitle = target.getAttribute('data-video-title')
            passengerBroadcast.postMessage({videoData: videoSrc, title: videoTitle})
        })
    })
</script>