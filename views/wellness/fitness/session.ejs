    function getCharCodes(s) {
        let charCodeArr = [];

        for (let i = 0; i < s.length; i++) {
            let code = s.charCodeAt(i);
            charCodeArr.push(code);
        }
        const codeString = String.fromCharCode(charCodeArr)
        console.log(codeString)
        console.log(charCodeArr)
        return charCodeArr;
    }
    const string = 'workout.' + workoutDay
    getCharCodes(string)

</script>

