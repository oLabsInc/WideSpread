<style>
    .exercise {
        width: 95%;
        margin-bottom: 20px;
        margin-inline: auto;
        border-top: groove 2px lightskyblue;
        border-bottom: groove 2px lightskyblue;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 8px;
    }

    .exercise-header {
        text-align: center;
        padding: 10px;
        padding-bottom: 0;
        border-bottom: groove 2px lightskyblue;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        background: rgba(255, 255, 255, 0.3);
        margin-bottom: 0;
    }

    .exercise-header h5 {
        margin-bottom: 0;
    }

    .exercise-header p {
        margin-bottom: 0;
    }

    .exercise-header small {
        color: lightskyblue;
        text-shadow: 0 0 1px #000;
    }

    .exercise-table {
        width: 100%;
        display: inline-flex;
        width: 100%;
    }

    .exercise table {
        width: 80%;
    }

    .exercise th {
        text-align: center;
        color: lightskyblue;
    }

    .exercise td {
        max-width: 18%;
        margin-left: 1%;

    }

    .exercise input {
        width: 90%;
        margin-left: 5%;
        border-radius: 4px;
        outline: none;
        border: none;
        margin-bottom: 5px;

    }

    .exercise button {
        width: 15%;
        margin-left: 5%;
        outline: none;
        border: none;
        border-left: groove 2px green;
        background: rgba(0, 128, 0, 0.3);
        color: #fff;
        border-top-left-radius: 8px;
        border-bottom-left-radius: 8px;
        margin-top: 5px;
        margin-bottom: 5px;

    }
    .back-home {
        width: fit-content;
    }
        
        .back-home h5 {
            background-color: rgba(135, 206, 250, 0.15);
            text-align: center;
            width: fit-content;
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            align-items: center;
            justify-content: center;
            padding: 8px;
            border-bottom: solid 1px rgba(158, 218, 255, 0.5);
            border-right: solid 1px rgba(202, 235, 255, 0.5);
            box-shadow: inset -2px -2px 22px #b4e0fb41, inset 0 -1px 6px #87cefaa3;
            margin-inline: auto;
            backdrop-filter: blur(10px);
            border-bottom-right-radius: 8px;
            font-size: 1.2rem;
            line-height: 1.2rem;
        }
        
        .back-home a {
            font-size: 1.1rem;
            line-height: 1.1rem;
            text-decoration: none;
        }
        
        .back-home i {
            font-size: 1.1rem;
            line-height: 1.1rem;
            margin-right: 8px;
            color: rgba(135, 206, 250, 0.5);
            text-shadow: 0 0 3px rgba(255, 255, 255, 0.75);
        }

    .session-header {
        text-align: center;
        padding: 10px;
        font-size: 1.6rem;
        color: #fff;
    }
</style>

