<style>
    .spread-form {
        margin-top: 40px;
        width: 90%;
        margin: 0 auto;
    }
    .spread-form form {
    }
    .input-section {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: space-around;
      width: 100%;
        margin-bottom: 5px;
    }
    .input-section button {
      width: 25%;  
      margin: 0 auto;
      background: rgba(255, 255, 255, 0.5);
      margin-top: 20px;
      margin-bottom: 20px;
      outline: none;
      border-radius: 6px;
      color: #fff;
      font-size: 1.2rem;
      padding: 10px;
    background: rgba(135, 206, 250, 0.5);
    border: outset 2px lightskyblue;
    box-shadow: -5px 0 5px rgba(0, 0, 0, 0.25), inset 0 0 3px #fff;
    }
    .input-header {
        text-align: center;
        padding: 5px;
        font-size: 1.2rem;
        font-weight: bold;
    }
    .input-data {
        margin-bottom: 3px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 10px;
        width: 80%;
    }
    .input-data input {
    font-size: 1rem;
    width: calc(95% - 50px);
    border-top-left-radius: 6px;
    border-bottom-left-radius: 6px;
    padding: 3px;
    padding-left: 5px;
    background: rgba(255, 255, 255, 0.25);
    color: #fff;
    font-weight: lighter;
    margin: 0;
    margin-top: 1px;
    outline: none;
    border: inset 2px rgba(255, 255, 255, 0.25);
    border-right: none;
    transition: ease-in 0.5s;
}
.input-data input:-webkit-autofill,
.input-data input:-webkit-autofill:focus {
    transition: background-color 600000s 0s, color 600000s 0s;
  }
.input-data input::placeholder {
    color: #fff;
    text-shadow: 0 0 6px #000;
}
.input-data input:focus {
    color: #fff;
    text-shadow: 0 0 6px #000;
    background: rgba(135, 206, 250, 0.25);
    box-shadow: inset 0 0 4px rgba(255, 255, 255, 0.25), 0 0 2px rgba(255, 255, 255, 0.5);
    border: inset 2px rgba(135, 206, 250, 0.75);
    border-right: none;
    transition: ease-in 0.3s;
}
    .input-data label {
        background: rgba(255, 255, 255, 0.25);
        color: #fff;
        text-align: center;
        width: 20%;
        font-size: 1rem;
        padding: 4px;
    }
    .input-data input {
        width: 100%;
        font-size: 1rem;
        padding: 4px;
        margin-top: 8px;
        border-top-left-radius: 6px;
        border-bottom-left-radius: 6px;
        outline: none;
        border: inset 2px lightskyblue;
        border-right: none;
        box-shadow: inset 0 0 5px rgba(255, 255, 255, 0.5);
    }
    .input-data input:-internal-autofill-selected  {
      background-color: rgba(135, 206, 250, 0.5);
      background: rgba(135, 206, 250, 0.5);
      font-family: 'Gruppo', cursive;
    }
  input:-webkit-autofill,
  input:-webkit-autofill:focus {
    transition: background-color 600000s 0s, color 600000s 0s;
  }
    .food-item {
        text-align: center;
    }
    .nutrients {
        margin-top: 30px;
    }
    .nutrients table {
        width: 90%;
        margin-inline: auto;
        backdrop-filter: blur(10px);
    }
    thead > tr {
        box-shadow: inset 0 0 10px rgba(255, 255, 255, 0.5);
        color: #fff;
        font-weight: bold;
        border-radius: 8px;
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
        border-bottom: solid 1px #fff;
    }
    th {
        background: rgba(135, 206, 250, 0.25);
        padding: 5px;
    }
    th:first-of-type {
        border-top-left-radius: 8px;
    }
    th:last-of-type {
        border-top-right-radius: 8px;
        border-left: solid 1px #fff;
    }
    td {
        color: #fff;
        border-bottom: solid 1px lightskyblue;
        text-align: left;
        padding: 3px;
    }
    td:last-of-type {
        text-align: right;
    }


    .back-button {
        color: #fff;
        font-weight: bold;
        width: 200px;
        cursor: pointer;
        max-width: 80vw;
        margin-inline: auto;
        border-radius: 6px;
        background-color: rgba(135, 206, 250, 0.25);
        box-shadow: inset 0 0 10px rgba(255, 255, 255, 0.5);
        backdrop-filter: blur(10px);
        margin-top: 30px;
    }
</style>
<%- include('../../partials/menus/wellness'); %>


    <%- include('../../partials/menus/sub/wellness/nutrition'); %>


<div class="spread-form">
    <form action="/wellness/nutrition/search" method="post">
        <div class="input-section">
            <div class="input-data">
                <input type="text" name="search" placeholder="Search for foods...">
            </div>
            <button type="submit">Search</button>
        </div>
    </form>
</div>



<div class="food-item">
    <h5><%= returnedData.description %></h5>
    <% if (returnedData.wweiaFoodCategory) { %>
    <p><%= returnedData.wweiaFoodCategory.wweiaFoodCategoryDescription %></p>
    <% } else { %>
        <span></span>
    <% } %>
    <div class="nutrients">
        <table>
            <thead>
                <tr>
                    <th>Nutrient</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <% returnedData.foodNutrients.forEach(function(nutrient) { %>
                    <tr>
                        <td><%= nutrient.nutrient.name %></td>
                        <td><%= nutrient.amount %> <%= nutrient.nutrient.unitName %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>


<div class="back-button">Go Back</div>


<script>
    const backBtn = document.querySelector('.back-button')
    backBtn.addEventListener('click', e => {
        history.back()
    })
</script>