        }
    }
</style>
<%- include('../partials/menus/news'); %>

<div class="zone-title">
    <h1>
        <%= zone %>
    </h1>
</div>


<div class="spread-form">
    <form action="/news/search" method="post">
        <div class="input-section">
            <div class="input-data">
                <input type="search" name="searchQuery" placeholder="Search news...">
            </div>
            <button type="submit">Search News</button>
        </div>
    </form>
</div>

<div class="current-search-results-query">
    <p>Results for:</p>
    <h5><%= searchTerm %></h5>
</div>
<div class="articles-container">
    <% returnedData.articles.forEach(function(article) { %>
        <div class="article-container">
            <% if (!article.media) { %>
                <span></span>
            <% } else { %>
                <div class="article-background">
                    <img width="200px" src="<%= article.media %>" alt="">
                    <p style="color: #fff; text-transform: capitalize;"><%= article.topic %></p>
                </div>
            <% } %>

            <div class="article-header">
                <div class="article-title">
                    <h5><%= article.title %></h5>
                    <% if (!article.author) { %>
                        <span style="margin-bottom: 10px;"></span>
                    <% } else { %>
                        <p style="color: #fff;">Written By: <%= article.author %></p>
                    <% } %>
                </div>

                <div class="article-info">
                    <div class="published-data">
                        <span style="color: #fff;"><%= article.country %></span>
                        <span><%= article.published_date %></span>
                    </div>
                </div>
            </div>

            <div class="article-summary">
                <p style="color: #fff;"><%= article.summary %></p>
            </div>

            <div class="article-link">
                <a href="<%= article.link %>" target="_blank">Read Article</a>
            </div>
            
            <div class="article-media-slider">
                <% article.media_content.forEach(function(data) { %>
                    <div class="article-image">
                        <img src="<%= data %>" alt="">
                    </div>
                <% }) %>
            </div>

        </div>
    <% }) %>
</div>
