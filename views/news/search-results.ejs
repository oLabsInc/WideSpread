    .spread-form {
        margin-top: 40px;
        width: 90%;
        margin: 0 auto;
    }
    .spread-form form {
    }
    .input-section {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: space-around;
      width: 100%;
        margin-bottom: 5px;
    }
    .input-section button {
      width: 25%;  
      margin: 0 auto;
      background: rgba(255, 255, 255, 0.5);
      margin-top: 20px;
      margin-bottom: 20px;
      outline: none;
      border-radius: 6px;
      color: #fff;
