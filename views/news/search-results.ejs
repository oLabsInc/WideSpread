      background: rgba(135, 206, 250, 0.5);
      font-family: 'Gruppo', cursive;
    }
  input:-webkit-autofill,
  input:-webkit-autofill:focus {
    transition: background-color 600000s 0s, color 600000s 0s;
  }

    .current-search-results-query {
        text-align: center;
        margin-bottom: 20px;
    }
    .current-search-results-query p {
        color: #fff;
        text-align: center;
        padding: 8px;
    }
  .current-search-results-query h5 {
      color: lightskyblue;
      text-transform: capitalize;
      font-size: 1.5rem;
      padding: 10px;
  }
@media screen and (min-width: 300px) {
    .articles-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;

    }
    .article-container {
        background: rgba(85, 85, 85, 0.25);
        backdrop-filter: blur(4px);
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.25), 0 0 3px lightskyblue;
        width: 90vw;
        margin: 0 auto;
        margin-bottom: 30px;
        border-radius: 8px;
        overflow: hidden;
    }
    .article-background {
        min-width: 100%;
        position: relative;
    }
    .article-background img {
        width: 100%;
        top: 0;
        position: relative;
        left: 0;
        z-index: 18;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }
    .article-background p {
        color: #fff;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 20;
        text-align: center;
        padding-top: 10px;
        padding-bottom: 10px;
        font-weight: bold;
        font-size: 1.3rem;
        text-shadow: 0 0 4px #000;
        background: rgba(135, 206, 250, 0.25);
        backdrop-filter: blur(4px);
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        border-bottom: outset 2px rgba(135, 206, 250, 0.75);
