    }
    .article-header {
        position: relative;
        z-index: 21;
        margin-top: 10px;
        margin-bottom: 20px;
    }
    .article-title {
        width: 90%;
        margin: 0 auto;
    }
    .article-title h5 {
        font-size: 1.3rem;
        color: lightskyblue;
        text-align: center;
    }
    .article-header p {
        text-align: center;
        padding: 8px;
    }
    .published-data {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        border-bottom: solid 1px lightskyblue;
        width: 90%;
        margin: 0 auto;

    }
    .article-info span {
        width: 45%;
        color: #ccc;
        font-size: 0.6rem;
        padding: 8px;
    }
    .article-info span:last-of-type {
        text-align: right;
    }

    .article-summary {
        padding: 10px;
        padding-top: 0;
        margin-bottom: 15px;
    }
    .article-summary p {
        font-size: 1.1rem;
    }

    .article-link {
        background: rgba(135, 206, 250, 0.25);
        box-shadow: inset 0 0 5px rgba(255, 255, 255, 0.25), 0 -3px 5px rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(4px);
        width: 50%;
        margin: 0 auto;
        border-top-left-radius: 6px;
        border-top-right-radius: 6px;
        text-align: center;
        padding: 12px;    
    }
    .article-link a {
        width: 100%;
        text-decoration: none;
        color: #fff;
        font-size: 1.4rem;
    }
    .article-media-slider {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        width: 100%;
        overflow-x: scroll;
        align-items: center;
        justify-content: flex-start;
        border-top: outset 2px rgba(135, 206, 250, 0.75);
        box-shadow: 0 -3px 5px rgba(0, 0, 0, 0.4);
        background: #000;

    }

    .article-image {
        min-width: 45vw;
        height: fit-content;
    }
    .article-image img {
        width: 100%;
    }
