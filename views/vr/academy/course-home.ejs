<style>
    p {
        color: #00695C;
        background-color: #009688;
        background: rgb(52, 177, 255);
        background: #0fa3ff;
        background: rgb(130, 200, 240);
    }
</style>


<a-text value="<%= course.course %>" scale="2 2 1" text="align: center; color: lightskyblue" position="0 3 -5"></a-text>

<a-entity position="-0.15 1.375 -5" geometry="primitive: plane; width: 3;" material="opacity: 0;">

    <a-text value="Subject" scale="1 1 1" text="align: center; color: #000;" position="0 0.25 0"></a-text>
    <a-text value="<%= course.subject %>" scale="1.5 1.5 1" text="align: center; color: #000;"></a-text>
</a-entity>


<a-entity position="3.5 3 -4.75" rotation="0 -45 0">
    <a-text text="align: center; color: #fff;" value="Classes"></a-text>
    <a-entity>
        <a-gui-flex-container position="0 -0.75 0" gui-flex-container="flexDirection: column; alignItems: center;">
            <% course.classes.forEach(function(className) { %>
                    <a-gui-icon-label-button
                        onclick="runPage('/vr/academy/course/<%= course.id %>/classes/<%= className.id %>')"
                        width="2" height="0.5"
                        onclick=""
                        icon="f35a"
                        
                        icon-font="/fonts/fa-solid-900.ttf"
                        value="<%= className.name %>    "
                        margin="0 0 0.05 0"
                        active-color="#009688"
                        background-color="#004D40"
                        hover-color="#00695C"
                        border-color="#E0F2F1"
                        font-color="#E0F2F1"
                        gui-icon-label-button="iconActive: f3c5; backgroundColor: lightskyblue; fontColor: #fff; borderColor: #34B1FF; hoverColor: #34B1FF; activeColor: #34B1FF;"
                    >
                    </a-gui-icon-label-button>
            <% }) %>
        </a-gui-flex-container>
    </a-entity>
</a-entity>

<a-light type="point" position="0 2.5 0"></a-light>
<a-sky src="/images/system/vr/academy_1a1a1a.png" rotation="0 90 0"></a-sky>


<!-- Camera + cursor. -->
<a-entity id="cameraRig" position="0 1.6 0">
    <a-camera look-controls wasd-controls position="0 0 0">
        <a-gui-cursor id="cursor" raycaster="objects: [gui-interactable]" fuse="true" fuse-timeout="2000" design="ring"
            gui-cursor="activeColor: lightskyblue">
        </a-gui-cursor> <!-- /cursor -->
    </a-camera> <!-- /camera -->
</a-entity>


<script>
    window.runPage = function (page) {
        console.log(page)
        window.location.href = `http://localhost:5000${page}`
    }

</script>