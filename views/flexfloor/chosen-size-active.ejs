    <a-gui-flex-container position="0 1 -2" rotation="0 0 0" id="ffOpeningText" gui-flex-container="flexDirection: column; alignItems: center; justifyContent: center;">
        <a-gui-label width="2.5" height="0.75" onclick="logs" font-family="/fonts/BlackOps.ttf"
            gui-label="lineHeight: 1; backgroundColor: transparent; fontColor: orange; borderColor: lightskyblue;" material="visible: false;" font-size="0.3" value="Under Construction">
        </a-gui-label>
        <a-gui-label width="2.5" height="0.75" onclick="logs" font-family="/fonts/BlackOps.ttf"
            gui-label="lineHeight: 1; backgroundColor: transparent; fontColor: black; borderColor: lightskyblue;" material="visible: false;" font-size="0.1" value="Look down then hover the cursor over the menu to customize your room.">
        </a-gui-label>
    </a-gui-flex-container>
</a-entity>


<!-- Lighting -->

<!-- Wall Facing -->
<a-entity light="type: spot; color: #ffffff; intensity: 1; angle: 50; groundColor: #ffffff; decay: 3; penumbra: 0.8; castShadow: true; target: #wall1; shadowBias: 1" position="0 3 0" rotation="-45 180 0"></a-entity>
<a-entity light="type: spot; color: #ffffff; intensity: 1; angle: 50; groundColor: #ffffff; decay: 3; penumbra: 0.8; castShadow: true; target: #wall2; shadowBias: 1" position="0 3 0" rotation="-45 180 0"></a-entity>
<a-entity light="type: spot; color: #ffffff; intensity: 1; angle: 50; groundColor: #ffffff; decay: 3; penumbra: 0.8; castShadow: true; target: #wall3; shadowBias: 1" position="0 3 0" rotation="-45 180 0"></a-entity>
<a-entity light="type: spot; color: #ffffff; intensity: 1; angle: 50; groundColor: #ffffff; decay: 3; penumbra: 0.8; castShadow: true; target: #wall4; shadowBias: 1" position="0 3 0" rotation="-45 180 0"></a-entity>

<!-- Overhead Floor -->
<a-entity light="type: spot; color: #ffffff; intensity: 1; angle: 80; groundColor: #ffffff; decay: 3; penumbra: 0.8; castShadow: true; target: #floor; shadowBias: 1" position="0 3 0" rotation="-45 180 0"></a-entity>

<!-- Ambient Ceiling -->
<a-entity light="type: spot; color: #ffffff; intensity: 0.5; angle: 120; groundColor: #ffffff; decay: 3; penumbra: 0.8; castShadow: true; target: #ceiling; shadowBias: 1" position="0 0 0" rotation="-45 180 0"></a-entity>
