<a-text position="0 3 -10" scale="3 3 3" align="center" value="FlexFloor Room <%= size %>' X <%= size %>'"></a-text>
<a-text color="red" position="0 2 -10" scale="2 2 2" align="center" value="FlexFloor Room <%= sizeMeters %>m X <%= sizeMeters %>m"></a-text>

<a-entity id="flexRoom" opacity="0.5"> 
<!-- FLOOR -->
    <!-- <a-box id="floor" opacity="1" position="0 0 0" scale="<%= sizeMeters %> 0.1 <%= sizeMeters %>" color="white" rotation="0 0 0" material="shader: flat; src: #oak1_Img; repeat: 1 1; metalness: 0.25; roughnessMap: #oak1_Rough; roughness: 0.8; roughnessTextureRepeat: 1 1; envMap: #oak1_Height;"></a-box> -->
    <a-box id="floor" opacity="1" position="0 0 0" scale="<%= sizeMeters %> 0.1 <%= sizeMeters %>" color="white" rotation="0 0 0" material="src: #ply2_Img; repeat: 1 1; normalMap: #ply1_Norm; normalTextureRepeat: 1 1; metalness: 0; normalScale: 2 2; normalTextureOffset: 2 2; roughnessMap: #ply1_Rough; roughness: 0.8; roughnessTextureRepeat: 1 1;"></a-box>
    
    <!-- CEILING -->
