    <a-box id="ceiling" opacity="1" position="0 3 0" scale="<%= sizeMeters %> 0.1 <%= sizeMeters %>" color="white" rotation="0 0 0" material="src: #ply2_Img; repeat: 1 1; normalMap: #ply1_Norm; normalTextureRepeat: 1 1; metalness: 0; normalScale: 2 2; normalTextureOffset: 2 2; roughnessMap: #ply1_Rough; roughness: 0.8; roughnessTextureRepeat: 1 1;"></a-box>


    
<!-- WALLS -->

    <!-- EAST -->
