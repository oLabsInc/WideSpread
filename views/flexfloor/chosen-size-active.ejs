    <a-box id="wall1" opacity="1" position="<%= wallPosition %> 1.5 0" scale="<%= sizeMeters %> 0.1 3" color="white" rotation="90 90 0" material="src: #drywall_Img; repeat: 1 1; normalMap: #drywall_Norm; normalTextureRepeat: 1 1; metalness: 0; normalScale: 2 2; normalTextureOffset: 2 2; roughnessMap: #drywall_Rough; roughness: 0.8; roughnessTextureRepeat: 1 1;"></a-box>
    
    <!-- WEST -->
    <!-- <a-box id="wall2" opacity="1" position="-<%= wallPosition %> 1.5 0" scale="<%= sizeMeters %> 0.1 3" color="white" rotation="90 90 0" material="src: #log1_Img; repeat: 1 1; normalMap: #log1_Norm; normalTextureRepeat: 1 1; metalness: 0.25; normalScale: 2 2; normalTextureOffset: 2 2; displacementMap: #log1_Dis; ambientOcclusionMap: #pat1_Occ; ambientOcclusionTextureRepeat: 1 1; roughnessMap: #log1_Rough; roughness: 0.8; roughnessTextureRepeat: 1 1; envMap: #log1_Height;"></a-box> -->
    <a-box id="wall2" opacity="1" position="-<%= wallPosition %> 1.5 0" scale="<%= sizeMeters %> 0.1 3" color="white" rotation="90 90 0" material="src: #drywall_Img; repeat: 1 1; normalMap: #drywall_Norm; normalTextureRepeat: 1 1; metalness: 0; normalScale: 2 2; normalTextureOffset: 2 2; roughnessMap: #drywall_Rough; roughness: 0.8; roughnessTextureRepeat: 1 1;"></a-box>
    
    <!-- SOUTH -->
