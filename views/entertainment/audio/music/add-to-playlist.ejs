<style>
    .music-list {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-evenly;
        padding: 20px;
        width: 90%;
        margin: 0 auto;
    }

    .song-card {
        width: 90%;
        max-width: 90%;
        margin: 0 auto;
        border-radius: 10px;
        margin-bottom: 30px;
        background: rgba(0, 0, 0, 0.25);
        width: 400px;
        border-radius: 16px;
        overflow: hidden;
        position: relative;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.25), 0 0 3px lightskyblue;
    }

    .song-background {
        position: fixed;
        z-index: -10;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
    }

    .song-header {
        padding: 8px;
        text-align: center;
        margin-bottom: 30px;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
        border-bottom: outset 1px rgba(255, 255, 255, 0.5);
        box-shadow: 0 3px 5px rgba(0, 0, 0, 0.4);

    }

    .song-header h5 {
        font-size: 1rem;
    }

    .song-header h2 {
        font-size: 1.5rem;
        padding: 8px;
    }

    .song-header h3 {
        font-size: 1.2rem;
        color: #ccc;
    }

    .song-header h6 {
        font-size: 0.9rem;
        text-transform: capitalize;
        padding: 4px;
    }

    .song-tags {
        color: lightskyblue;
        text-shadow: 0 0 2px #000;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        justify-content: space-evenly;
        width: 100%;

    }

    .tags p {
        font-size: 1.3rem;
        color: #fff;
        display: block;
        text-align: center;
        width: 100%;
        padding: 5px;
    }


    .playlists {
        position: relative;
        z-index: 10;
        width: 90%;
        margin: 0 auto;
        padding-top: 20px;
        padding-bottom: 20px;
        background: rgba(0, 0, 0, 0.25);
        backdrop-filter: blur(4px);
        border-radius: 8px;
        border-top: outset 1px rgba(255, 255, 255, 0.25);
        border-bottom: outset 1px rgba(255, 255, 255, 0.25);
    }
    .playlists h3 {
        text-align: center;
        padding: 10px;
        font-size: 1.3rem;
        margin-bottom: 30px;
    }
    .playlist {
        text-align: center;
        margin-bottom: 30px;
        
    }
    .playlist a {
        width: 50%;
        color: #fff;
        text-decoration: none;
        font-size: 1.2rem;
        padding: 10px;
        margin-bottom: 20px;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.25), 0 0 3px lightskyblue;
        border-radius: 8px;
        background: rgba(135, 206, 250, 0.25);
        backdrop-filter: blur(4px);
    }
    audio {
        width: 100%;
        min-width: 100%;
        margin-bottom: 15px;
        border-radius: 0;
    }
</style>

<div class="zone-title">
    <h1>
        <%= zone %>
    </h1>
</div>


<%- include('../../../partials/menus/entertainment'); %>


    <%- include('../../../partials/menus/sub/entertainment/audio'); %>

        <div class="page-title">
            <h2>
                <%= subZonePage %>
            </h2>
        </div>


                <div class="song-card">
                    <div class="song-background"
                        style="background:url('<%= song.background_photo %>') 50% 50% no-repeat; background-size:cover;">
                    </div>
                    <div class="song-header">
                        <h5>
                            <%= song.artist %>
                        </h5>
                        <h2>
                            <%= song.song %>
                        </h2>
                        <h3>
                            <%= song.album %>
                        </h3>
                        <h6>
                            <%= song.genre %>
                        </h6>
                        <div class="song-tags">
                            <% song.tags.forEach(function(tag) { %>
                                <div class="tag">
                                    <span>
                                        <%= tag %>
                                    </span>
                                </div>
                                <% }) %>
                        </div>
                    </div>
                    <audio controls loop>
                        <source src="/audio/<%= song.img.data %>" type="audio/mp3">
                        Your browser does not support the audio element.
                    </audio>

                </div>

<div class="playlists">
    <% if (playlists.length <= 0) { %>
        <p>You don't have any playlists yet.</p>
        <form action="/entertainment/audio/music/playlist/create" method="post">
            <div class="input-group">
                <p>Playlist Name</p>
                <input type="text" name="name" placeholder="Playlist Name">
                <input type="hidden" name="song" value="<%= song.id %>">
            </div>
            <button type="submit">Create Playlist</button>
        </form>
    <% } else { %>
        <h3>Your Playlists</h3>
        <% playlists.forEach(function(playlist) { %>
            <div class="playlist">
                <a href="/entertainment/audio/music/add-to-playlist/song/<%= song.id %>/to/<%= playlist.id %>"><%= playlist.name %></a>
            </div>
        <% }) %>
    <% } %>
</div>