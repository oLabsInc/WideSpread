<style>
   .movie-search {
        border-top: outset 1px lightskyblue;
        border-bottom: outset 1px lightskyblue;
        padding: 10px;
        padding-left: 0;
        padding-bottom: 0;
        width: 90%;
        margin: 0 auto;
        margin-top: 15px;
        margin-bottom: 15px;
        border-radius: 8px;
    }

