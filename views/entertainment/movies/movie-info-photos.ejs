<style>
    .spread-header-container {
        margin-bottom: 30px;
        min-height: 150px;
        max-height: 150px;
        overflow: hidden;
        position: relative;
    }

    .spread-slider-container {
        min-height: 200px;
        margin-top: 10px;
        border-top: outset 2px #333;
        border-bottom: outset 2px #333;
    }

    .spread-slider-container h5 {
        background: rgba(255, 255, 255, 0.5);
        backdrop-filter: blur(4px);
        padding: 10px;
        text-align: center;
        margin-bottom: 20px;
    }

    .spread-slider-container>h5>b {
        text-decoration: none;
        color: rgba(0, 0, 0, 0.75);
        text-shadow: 0 0 2px lightskyblue;
        font-weight: bolder;
        text-transform: capitalize;
    }




    .spread-slider {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-evenly;
        align-items: center;
    }

    .spread-slider-item {
        margin-bottom: 10px;
    }

    .spread-slider-item-background {}

    .spread-slider-item-background img {
        border-radius: 8px;
        max-width: 150px;
        box-shadow: 0 3px 4px rgba(0, 0, 0, 0.534);
    }

    .spread-header-slider-container {
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: space-evenly;
        align-items: center;
        min-height: 150px;


    }

    .spread-header-slider-item {
        min-height: 150px;
        min-height: 100%;
        background: rgba(0, 0, 0, 0.25);
        height: 100px;
        border: solid 1px #fff;
        box-shadow: inset 0 0 3px rgba(135, 206, 250, 0.6);
        border-top: none;
        width: 20%;
    }
</style>


    <div id="photoContainer" class="spread-slider-container">

        <div class="spread-slider-anchor">
            <div class="spread-slider-rack">
                <div id="movieSpreadSlider" class="spread-slider">
                    <% returnedData.resource.images.forEach(function(image) { %>
                        <div class="spread-slider-item">
                            <div class="spread-slider-item-background">
                                <img src="<%= image.url %>" alt="">
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
        </div>
    </div>