<style>
    .spread-form {
        background: #000;
        margin-top: 40px;
        width: 50%;
        margin: 0 auto;
    }

    .spread-form form {}

    .input-section {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-around;
        width: 100%;
        margin-bottom: 5px;
    }

    .input-section button {
        width: 25%;
        margin: 0 auto;
        background: rgba(255, 255, 255, 0.5);
        margin-top: 20px;
        margin-bottom: 20px;
        outline: none;
        border-radius: 6px;
        color: #fff;
        font-size: 1.2rem;
        padding: 10px;
        background: rgba(135, 206, 250, 0.5);
        border: outset 2px lightskyblue;
        box-shadow: -5px 0 5px rgba(0, 0, 0, 0.25), inset 0 0 3px #fff;
    }

    .input-header {
        text-align: center;
        padding: 5px;
        font-size: 1.2rem;
        font-weight: bold;
    }

    .input-data {
        margin-bottom: 3px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 10px;
        width: 80%;
    }

    .input-data input {
        font-size: 1rem;
        width: calc(95% - 50px);
        border-top-left-radius: 6px;
        border-bottom-left-radius: 6px;
        padding: 3px;
        padding-left: 5px;
        background: rgba(255, 255, 255, 0.25);
        color: #fff;
        font-weight: lighter;
        margin: 0;
        margin-top: 1px;
        outline: none;
        border: inset 2px rgba(255, 255, 255, 0.25);
        border-right: none;
        transition: ease-in 0.5s;
    }

    .input-data input:-webkit-autofill,
    .input-data input:-webkit-autofill:focus {
        transition: background-color 600000s 0s, color 600000s 0s;
    }

    .input-data input::placeholder {
        color: #fff;
        text-shadow: 0 0 6px #000;
    }

    .input-data input:focus {
        color: #fff;
        text-shadow: 0 0 6px #000;
        background: rgba(135, 206, 250, 0.25);
        box-shadow: inset 0 0 4px rgba(255, 255, 255, 0.25), 0 0 2px rgba(255, 255, 255, 0.5);
        border: inset 2px rgba(135, 206, 250, 0.75);
        border-right: none;
        transition: ease-in 0.3s;
    }

    .input-data label {
        background: rgba(255, 255, 255, 0.25);
        color: #fff;
        text-align: center;
        width: 20%;
        font-size: 1rem;
        padding: 4px;
    }

    .input-data input {
        width: 100%;
        font-size: 1rem;
        padding: 4px;
        margin-top: 8px;
        border-top-left-radius: 6px;
        border-bottom-left-radius: 6px;
        outline: none;
        border: inset 2px lightskyblue;
        border-right: none;
        box-shadow: inset 0 0 5px rgba(255, 255, 255, 0.5);
    }

    .input-data input:-internal-autofill-selected {
        background-color: rgba(135, 206, 250, 0.5);
        background: rgba(135, 206, 250, 0.5);
        font-family: 'Gruppo', cursive;
    }

    input:-webkit-autofill,
    input:-webkit-autofill:focus {
        transition: background-color 600000s 0s, color 600000s 0s;
    }

    .spread-slider-container h5 {
        text-align: center;
        padding: 10px;
        font-size: 1.2rem;
    }

    .spread-slider-container h5 b {
        text-transform: capitalize;
        font-size: 1.2rem;
    }

    .results {
        background: rgba(255, 255, 255, 0.199);
        margin-bottom: 15px;
    }

    .results h5 {
        text-align: center;
        padding: 10px;
        font-size: 1.2rem;
    }

    .results p {
        text-align: center;
        padding: 5px;
        font-size: 1.5rem;
        text-transform: capitalize;
        color: #fff;
        padding-bottom: 15px;
    }

    .spread-slider-anchor {}

    .spread-slider-rack {}

    .spread-slider {
        padding: 10px;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: space-evenly;
        align-items: center;
    }

    .spread-slider-item {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 10px;
    }

    .spread-slider-item-title {
        background: rgba(135, 206, 250, 0.5);
        max-width: 110px;
        height: 180px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        text-align: center;
    }

    .spread-slider-item-title p {
        word-break: break-word;
        padding: 5px;
        font-size: 1.2rem;
    }

    .spread-slider-item a {
        color: #fff;
        text-decoration: none;
    }

    .spread-slider-item-header small {
        color: #fff;
        text-decoration: none;
        font-size: 0.75rem;
    }

    .spread-slider-item-background {
        width: 80%;
        max-height: 95%;

    }

    .spread-slider-item-background img {
        max-height: 100%;
        height: 100%;
        width: 120px;
        border-radius: 6px;
    }

    @media screen and (min-width: 299px) {

        .spread-form {
            background: #000;
            margin-top: 40px;
            width: 95%;
            margin: 0 auto;
        }

        .spread-form form {}

        .input-section {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-around;
            width: 100%;
            margin-bottom: 5px;
        }

        .input-section button {
            width: 45%;
            margin: 0 auto;
            background: rgba(255, 255, 255, 0.5);
            margin-top: 20px;
            margin-bottom: 20px;
            outline: none;
            border-radius: 6px;
            color: #fff;
            font-size: 1rem;
            padding: 10px;
            background: rgba(135, 206, 250, 0.5);
            border: outset 2px lightskyblue;
            box-shadow: -5px 0 5px rgba(0, 0, 0, 0.25), inset 0 0 3px #fff;
        }

    }
</style>


<div class="spread-form">
    <form action="/entertainment/tv/search" method="POST">
        <div class="input-section">
            <div class="input-data">
                <input type="text" name="show" id="movie" placeholder="Search for shows...">
            </div>
            <button type="submit">Search Shows</button>
        </div>
    </form>
</div>

<div id="movieContainer" class="spread-slider-container">
    <div class="results">
        <h5>Results for:</h5>
        <p>
            <%= convertedString %>
        </p>
    </div>
    <div class="spread-slider-anchor">
        <div class="spread-slider-rack">
            <div id="movieSpreadSlider" class="spread-slider">
                <% returnedData.results.forEach(function(show) { %>
                    <div class="spread-slider-item">
                        <a href="/entertainment/tv/show/<%= show.id %>">
                            <% if (show.poster === null ) { %>
                                <div class="spread-slider-item-title">
                                    <div class="spread-slider-item-header">
                                        <p>
                                            <%= show.name %>
                                        </p>
                                        <small>No Poster</small>
                                    </div>
                                </div>
                                <% } else { %>
                                    <div class="spread-slider-item-background">
                                        <img src="https://image.tmdb.org/t/p/w500<%= show.poster_path %>" alt="">
                                    </div>
                                    <% } %>
                        </a>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>
</div>