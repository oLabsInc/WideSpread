<style>

    .show-image {
        position: fixed;
        top: 0;
        left: 0;
        min-width: 100vw;
        min-height: 100vh;
        z-index: -50;
    }
        .add-to-recommended {
            position: fixed;
            bottom: 36px;
            right: 0;
            z-index: 99998;
        }
        
        .add-to-recommended button {
            width: 50px;
            max-width: 50px;
            height: 50px;
            position: relative;
            z-index: 99999;
            background: rgba(0, 128, 0, 0.3);
            backdrop-filter: blur(4px);
            border: none;
            outline: none;
            border-top: outset 1px green;
            border-left: outset 1px green;
            border-top-left-radius: 30px;
            color: rgba(255, 255, 255, 0.75);
            padding: 10px;
            text-align: center;
            font-size: 1.1rem;
            margin-top: 10px;
            box-shadow: -2px -2px 8px rgba(0, 255, 0, 0.5);
            text-shadow: 0 0 2px rgba(0, 255, 0, 0.5);
        }


    .add-to-list {
        width: 50%;
        margin: 0 auto;
        margin-top: 30px;
        margin-bottom: 30px;
        text-align: center;
    }
    .add-to-list button {
        background: rgba(135, 206, 250, 0.25);
        backdrop-filter: blur(4px);
        outline: none;
        border: none;
        border-radius: 8px;
        padding: 10px;
        width: 200px;
        margin-bottom: 15px;
        color: #fff;
        font-size: 1.5rem;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.25), 0 0 3px lightskyblue;
    }
        .add-to-list a {
            text-decoration: none;
            color: lightskyblue;
            font-size: 1.5rem;
            background: rgba(0, 0, 0, 0.25);
            padding: 5px;
            font-weight: bolder;
            border-radius: 8px;
            box-shadow: 0 0 5px rgba(255, 255, 255, 0.25), 0 0 2px lightskyblue;
            backdrop-filter: blur(4px);
        }
    .seasons-container {
        width: 100vw;
        margin: 0 auto;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: stretch;
        justify-content: space-evenly;
    }

    .season-container {
        max-width: 40vw;
        width: 120px;
        margin-right: 20px;
        margin-bottom: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.25), 0 0 3px lightskyblue;
        position: relative;
    }
    .season-container a {
        min-height: 300px;
    }
    .season-background {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(4px);
        position: relative;
        width: 100%;
        height: 100%;
    }
    .season-background img {
        width: 100%;
        border-radius: 8px;    
        min-height: 100%;
    }
    .no-show-image {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100px;
        top: 50%;
        transform: translateY(50%);
    }
    .no-show-image img {
        width: 80%;
        height: 100px;
        max-height: 100px;
        margin: 0 auto;
        filter: drop-shadow(0 0 3px lightskyblue);
    }
    .season-header {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        z-index: 20;
        text-align: center;
        background: rgba(135, 206, 250, 0.25);
        backdrop-filter: blur(4px);
        box-shadow: inset 0 0 4px rgba(255, 255, 255, 0.25);
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        border-bottom: outset 2px rgba(135, 206, 250, 0.75);
    }
    .movie-search {
        background: rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(4px);
        border-top: outset 2px lightskyblue;
        border-bottom: outset 2px lightskyblue;
        padding: 10px;
        padding-left: 0;
        padding-bottom: 0;
        width: 100%;
        margin-bottom: 15px;
    }

    .movie-search input {
        width: 100%;
        outline: none;
        border: none;
        margin-left: 0;
        padding: 5px;
        background: rgba(135, 206, 250, 0.5);
        backdrop-filter: blur(4px);
        color: #fff;
        box-shadow: inset 0 0 5px rgba(255, 255, 255, 0.75);
    }

    .movie-search input::placeholder {
        color: #fff;
    }

    .movie-search button {
        width: 80%;
        margin-left: 10%;
        background: green;
        border: outset 2px green;
        border-bottom: none;
        margin-bottom: 0;
        color: #fff;
        margin-top: 10px;
        border-radius: none;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

</style>

<div class="show-image" style="background:url('https://image.tmdb.org/t/p/w500<%= returnedData.poster_path %>') 50% 50% no-repeat; background-size:cover;"></div>

<%- include('../../partials/menus/entertainment'); %>

<%- include('../../partials/menus/sub/entertainment/tv'); %>

<%- include('../../partials/menus/sub/entertainment/tv-show', {showName: subZonePage, seasonsList: returnedData.seasons, seasonName: '', seasonList: returnedData.seasons, showId: returnedData.id}); %>

<div class="sub-zone-page-title">
    <h2><%= subZonePage %></h2>
</div>



<div class="movie-search">
    <form action="/entertainment/tv/search" method="POST">
        <input type="text" name="show" id="movie" placeholder="Search for shows...">
        <button type="submit">Search</button>
    </form>
</div>


<div class="add-to-list">
    <form action="/entertainment/tv/save" method="post">
        <input type="text" name="name" value="<%= returnedData.name %>" hidden>
        <input type="text" name="link" value="<%= returnedData.id %>" hidden>
        <input type="text" name="poster" value="<%= returnedData.poster_path %>" hidden>
        <button>Add to List</button>
    </form>
    <p><a href="/users/entertainment/tv">See Your List</a></p>
</div>


<div class="seasons-container">
        <% returnedData.seasons.forEach(function(season) { %>
            <div class="season-container">
                    <a href="/entertainment/tv/show/<%= showId %>/<%= season.season_number %>">
                    <div class="season-background">
                        <% if (season.poster_path === null) { %>
                            <div class="no-show-image">
                                <img src="/images/system/tv-icon.png" alt="">
                            </div>
                        <% } else { %>
                            <img src="https://image.tmdb.org/t/p/w500<%= season.poster_path %>" alt="">
                        <% } %>
                    </div>
                    <div class="season-header">
                        <h5><%= season.name %></h5>
                    </div>
                </a>
                </div>
        <% }) %>
</div>



