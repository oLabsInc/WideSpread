<style>
    @media screen and (min-width: 299px) {
        .card-list {
            backdrop-filter: blur(4px);
            border-radius: 6px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-evenly;
            flex-wrap: wrap;
            padding-top: 10px;
            margin-top: 30px;
        }

        .card {
            background: rgba(255, 255, 255, 0.25);
            position: relative;
            width: 90%;
            min-width: 300px;
            
            min-height: 300px;
            margin: 0 auto;
            margin-bottom: 20px;
            border-radius: 16px;
            overflow: hidden;


        }

        .card-background {
            width: 100%;
            min-height: 300px;
            height: 300px;
            overflow: hidden;
            position: absolute;
            z-index: -1;
            top: 0;
            left: 0;
        }

        .card-background img {
            min-width: 100%;
        }

        .card-data {
            position: relative;
            z-index: 2;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
            height: 200px;
        }

        .card-data-header {
            width: 100%;
            min-width: 100%;
            background: rgba(0, 0, 0, 0.5);
            border-top: outset 1px rgba(255, 255, 255, 1);
            border-bottom: outset 1px rgba(255, 255, 255, 1);
            backdrop-filter: blur(4px);
            box-shadow: 0 3px 5px rgba(0, 0, 0, 0.4);
            margin-top: 12px;
            padding: 8px;
        }

        .card-data-header h4 {
            font-size: 1.3rem;
            text-align: center;
        }

        .card-data-header a {
            text-decoration: none;
            color: #fff;
        }

        .card-data-header p {
            text-align: center;
            color: #fff;
            width: 100%;
            margin: 0 auto;
        }

        .card-data-header small {
            text-transform: capitalize;
        }
        .card-data-header h5  {
            text-align: center;
            margin-top: 10px;
            margin-bottom: 10px;
            font-size: 1.2rem;
        }
        .card-data-body {
            margin-top: 15px;
            width: 100%;
            min-width: 100%;
            max-height: 150px;
            background: rgba(0, 0, 0, 0.5);
            border-top: outset 1px rgba(255, 255, 255, 1);
            border-bottom: outset 1px rgba(255, 255, 255, 1);
            backdrop-filter: blur(4px);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);

        }

        .class-list {
            padding: 8px;
            width: 100%;
            max-height: 100px;
            overflow-y: auto;

        }

        .class-list-item a {
            color: #fff;
            text-decoration: none;
            font-size: 1.2rem;
            padding-top: 12px;
        }

        .course-info {
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            align-items: center;
            justify-content: space-between;
            border-top: solid 1px rgba(135, 206, 250, 0.75);
        }

        .course-info-item {
            width: 50%;
            color: #fff;
            padding: 8px;
        }

        .course-info-item:last-of-type {
            text-align: right;
        }

        .card-data-actions {
            background: rgba(135, 206, 250, 0.5);
            backdrop-filter: blur(4px);
            border-top: outset 1px rgba(255, 255, 255, 1);
            border-bottom: outset 1px rgba(255, 255, 255, 1);
            width: 50%;
            text-align: center;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            margin-top: 20px;
            box-shadow: 0 -3px 5px rgba(0, 0, 0, 0.4);
            position: absolute;
            bottom: 0;
            left: 0;
            transform: translateX(50%);
        }

        .card-data-actions a {
            line-height: 2rem;
            color: #fff;
            text-decoration: none;
            font-size: 1.3rem;
        }

    }

    @media screen and (min-width: 762px) {

        .card-list {
            flex-direction: row;
        }

        .card {
            max-width: 300px;
            border-radius: 16px;
        }
    }

    @media screen and (min-width: 992px) {}
</style>

<%- include('../../partials/menus/academy'); %>

    <div class="page-title">
        <h2>Courses</h2>
    </div>

    <div class="card-list">
        <% courses.forEach(function(course) { %>
            <div class="card">
                <div class="card-background">
                    <% if (course.course_id.background_image) { %>
                        <img src="/image/<%= course.course_id.background_image %>" alt="">
                        <% } else { %>
                            <span style="display: none;"></span>
                            <% } %>
                </div>






                <div class="card-data">

                    <div class="card-data-header">
                        <h4><a href="/academy/course/<%= course.course_id.id %>">
                                <%= course.course_id.course %>
                            </a></h4>
                        <p><small>
                                <%= course.course_id.subject %>
                            </small></p>


                    </div>


                    <div class="card-data-body">
                        <div class="class-list">
                            <% course.course_id.classes.forEach(function(classId) { %>
                                <div class="class-list-item">
                                    <p><a href="/academy/course/<%= course.course_id.id %>/class/<%= classId.id %>">
                                            <%= classId.name %>
                                        </a></p>
                                </div>
                                <% }) %>
                        </div>

                        <div class="course-info">
                            <div class="course-info-item"><span>Difficulty: <%= course.course_id.difficulty %></span></div>
                            <div class="course-info-item"><span>Credits: <%= course.course_id.credit_value %></span></div>
                        </div>
                    </div>

                    
                </div>
                
                                    <div class="card-data-actions">
                                        <a style="padding: 10px;" href="/academy/course/<%= course.course_id.id %>">Open Course</a>
                                    </div>
                

            </div>
            <% }) %>
    </div>